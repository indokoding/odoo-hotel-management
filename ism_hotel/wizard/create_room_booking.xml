<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="create_room_booking_wizard" model="ir.ui.view">
        <field name="name">create.room</field>
        <field name="model">create.room.booking.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Room Booking">
                <group>
                    <group>
                        <field name="check_in" options="{'datepicker': {'format': 'dd-MM-yyyy'}}"/>
                        <field name="partner_id" string="Customer"/>
                    </group>
                    <group>
                        <field name="check_out"/>
                        <field name="duration" readonly="1" string="Duration (Days)"/>
                    </group>
                    <field name="room_ids" domain="[('state', '=', 'available')]">
                        <tree string="Available Rooms" editable="false" create="false" delete="false">
                            <field name="name"/>
                            <field name="room_type"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button string="Create" class="btn-primary" name="action_create_room_booking" type="object"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="create_room_booking_wizard_action" model="ir.actions.act_window">
        <field name="name">Book Room</field>
        <field name="res_model">create.room.booking.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="create_room_booking_wizard"/>
        <field name="target">new</field>
    </record>
</odoo>