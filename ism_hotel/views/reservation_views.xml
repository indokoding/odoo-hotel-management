<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hotel_reservation_view_tree" model="ir.ui.view">
        <field name="name">hotel.reservation.view.tree</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <tree string="Reservations">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="checkin_date"/>
                <field name="checkout_date"/>
                <field name="room_ids"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="hotel_reservation_view_form" model="ir.ui.view">
        <field name="name">hotel.reservation.view.form</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <form string="Reservations">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="partner_id"/>
                        <field name="checkin_date"/>
                        <field name="checkout_date"/>
                        <field name="room_ids"/>
                        <field name="state"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hotel_reservation_view_search" model="ir.ui.view">
        <field name="name">hotel.reservation.view.search</field>
        <field name="model">hotel.reservation</field>
        <field name="arch" type="xml">
            <search string="Reservations">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="checkin_date"/>
                <field name="checkout_date"/>
                <field name="room_ids"/>
                <field name="state"/>
            </search>
        </field>
    </record>

    <record id="action_hotel_reservation" model="ir.actions.act_window">
        <field name="name">Reservations</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.reservation</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="hotel_reservation_view_search"/>
        <field name="context">{'search_default_filter_is_room': 1}</field>
    </record>
</odoo>