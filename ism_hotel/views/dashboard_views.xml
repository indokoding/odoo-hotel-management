<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hotel_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">hotel.dashboard.kanban</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column"
                default_group_by="room_type" 
                no_create="true" 
                create="false"
                quick_create="false" 
                archivable="false" 
                deletable="false"
                group_create="false"
                group_edit="false"
                group_delete="false"
                default_order="name"
                records_draggable="false"
            >
                <field name="id"/>
                <field name="name"/>
                <field name="room_type"/>
                <field name="state"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card d-flex flex-column">
                            <div class="o_dropdown_kanban dropdown">
                                <a class="dropdown-toggle o-no-caret btn" role="button" data-bs-toggle="dropdown" data-bs-display="static" href="#" aria-label="Dropdown menu" title="Dropdown menu">
                                    <span class="fa fa-ellipsis-v"/>
                                </a>
                                <div class="dropdown-menu" role="menu">
                                    <a role="menuitem" class="dropdown-item">Set to Under Maintenance</a>
                                </div>
                            </div>
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_title">
                                    <strong><field name="name"/></strong>
                                </div>
                                <div class="oe_kanban_subtitle">
                                    <field name="state" widget="badge" decoration-success="state == 'available'" decoration-info="state == 'reserved'" decoration-warning="state == 'occupied'" decoration-danger="state == 'maintenance'"/>
                                </div>
                            </div>
                            <div class="oe_kanban_footer">
                                <div class="o_kanban_record_bottom">
                                    <div class="oe_kanban_bottom_left">
                                        <t t-if="record.state.raw_value == 'available'">
                                            <button type="action" class="btn btn-info" name="%(create_room_booking_wizard_action)d" string="Book"/>
                                            <button type="action" class="btn btn-outline-success" name="%(checkin_room_booking_wizard_action)d" string="Check In" context="{'default_room_id': active_id}"/>
                                        </t>
                                        <t t-if="record.state.raw_value == 'reserved'">
                                            <button type="action" class="btn btn-info" name="%(checkin_room_booking_wizard_action)d" string="Check In" context="{'default_room_id': active_id}"/>
                                        </t>
                                        <t t-if="record.state.raw_value == 'occupied'">
                                            <button type="button" class="btn btn-info" name="action_hotel_reservation" string="Check Out" context="{'default_room_id': active_id}"/>
                                        </t>
                                        <t t-if="record.state.raw_value == 'maintenance'">
                                            <button type="button" class="btn btn-info" name="action_hotel_reservation" string="Set to available" context="{'default_room_id': active_id}"/>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hotel_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">kanban</field>
        <field name="view_id"></field>
    </record>
</odoo>