<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="hotel_dashboard_view_kanban" model="ir.ui.view">
        <field name="name">hotel.dashboard.kanban</field>
        <field name="model">hotel.room</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column"
                default_group_by="room_type" 
                no_create="true" 
                create="false"
                quick_create="false" 
                archivable="false" 
                deletable="false"
                group_create="false"
                group_edit="false"
                group_delete="false"
                default_order="name"
                records_draggable="false"
                >
                <field name="name"/>
                <field name="room_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <div class="oe_kanban_details">
                                    <span class="oe_kanban_details_2">
                                        <field name="name"/>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_hotel_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hotel.room</field>
        <field name="view_mode">kanban</field>
        <field name="view_id"></field>
    </record>
</odoo>